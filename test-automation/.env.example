# Environment Configuration
# Copy this file to .env and update with your actual values

# Environment Selection (dev, staging, prod)
TEST_ENV=dev

# Web Testing
WEB_BASE_URL=https://dev.example.com
BROWSER=chrome
HEADLESS=false

# API Testing
API_BASE_URL=https://api.dev.example.com
API_TIMEOUT=30
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Mobile Testing
PLATFORM_NAME=Android
PLATFORM_VERSION=12.0
DEVICE_NAME=Android Emulator
APP_PATH=/path/to/your/app.apk
APPIUM_SERVER=http://localhost:4723

# Database (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=test_db
DB_USER=test_user
DB_PASSWORD=test_password

# Authentication
TEST_USERNAME=test.user@example.com
TEST_PASSWORD=Test@123

# Reporting
ALLURE_RESULTS_DIR=test-automation/allure-results
ALLURE_REPORT_DIR=test-automation/allure-report

# Logging
LOG_LEVEL=INFO
LOG_DIR=test-automation/logs

# Screenshots and Videos
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_DIR=test-automation/screenshots
VIDEO_RECORDING=false
VIDEO_DIR=test-automation/videos

# Test Execution
PARALLEL_EXECUTION=false
MAX_WORKERS=4
TEST_TIMEOUT=300

# Additional Configuration
RETRY_FAILED_TESTS=true
MAX_RETRIES=2
